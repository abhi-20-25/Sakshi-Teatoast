FROM pytorch/pytorch:2.1.0-cuda11.8-cudnn8-runtime

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    libpq-dev \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY config/requirements.txt /app/config/requirements.txt
RUN pip install --no-cache-dir -r config/requirements.txt

# Copy processor code
COPY processors/shutter_monitor_processor006.py /app/processors/
COPY services/video_server_mixin.py /app/services/
COPY services/shutter_monitor_service.py /app/services/

# Create necessary directories
RUN mkdir -p /app/static/detections /app/static/detections/shutter_videos /app/models

ENV PYTHONUNBUFFERED=1

CMD ["python", "-u", "services/shutter_monitor_service.py"]

