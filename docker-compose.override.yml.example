# Docker Compose Override Example
# Copy this file to docker-compose.override.yml and customize as needed
# This file is for local development/testing without GPU

version: '3.8'

services:
  # If you don't have NVIDIA GPU, use this override to remove GPU requirements
  detection-processor:
    deploy:
      resources:
        limits:
          cpus: '2'
          memory: 4G
        # Remove GPU reservation
        reservations: {}

  people-counter-processor:
